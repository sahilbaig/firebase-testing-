{
  "compilerOptions": {
    "target": "ESNext", // Use the latest ECMAScript version
    "module": "ESNext", // Use ES modules
    "moduleResolution": "Node", // Resolve modules in a Node.js-compatible way
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "strict": true, // Enable strict type-checking
    "skipLibCheck": true, // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file name casing
  },
  "ts-node": {
    "esm": true // Enable ES module support for ts-node
  }
}

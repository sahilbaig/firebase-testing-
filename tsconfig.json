{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib", // ✅ Ensure compiled files go into `lib/`
    "rootDir": "src", // ✅ Ensures TypeScript compiles only `src/`
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"] // ✅ Enables clean imports like `@src/index.js`
    }
  },
  "include": ["src"]
}
